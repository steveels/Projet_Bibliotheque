{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Room</h1>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ room.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ room.name }}</td>
                        </tr>
                        <tr>
                            <th>Capability</th>
                            <td>{{ room.capability }}</td>
                        </tr>
                    </tbody>
                </table>
                <h5>Equipement(s):</h5>
                <div class="row">
                    {% for equip in room.equipement %}
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    {{ equip.nom }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <button class="btn btn-primary">
                    <a class="text-decoration-none text-light" href="{{ path('app_admin_room_index') }}">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </button>
                <button class="btn btn-warning">
                    <a class="text-decoration-none text-light" href="{{ path('app_admin_room_edit', {'id': room.id}) }}">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </button>
                {{ include('admin_room/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
