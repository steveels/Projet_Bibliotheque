{% extends 'base.html.twig' %}

{% block title %}EmpruntLivre index{% endblock %}

{% block body %}
    <h1>EmpruntLivre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateEmprunt</th>
                <th>DateRestitution</th>
                <th>DateRestituionEffective</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>


    <h1>Liste des emprunts de livres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Livre</th>
                <th>Date d'emprunt</th>
                <th>Date de restitution</th>
                <th>Date de restitution effective</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for book in emprunt_livres %}
                <tr>
                    <td>{{ book.emprunt.id }}</td>
                    <td>{{ book.book.title }}</td>
                    <td>{{ book.emprunt.dateEmprunt ? book.emprunt.dateEmprunt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ book.emprunt.dateRestitution ? book.emprunt.dateRestitution|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ book.emprunt.dateRestituionEffective ? book.emprunt.dateRestituionEffective|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_emprunt_livre_show', {'id': book.emprunt.id}) }}">Voir</a>
                        <!-- Ajoutez ici les liens pour éditer et supprimer chaque emprunt -->
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun emprunt trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_emprunt_livre_new') }}">Ajouter un emprunt</a>
{% endblock %}