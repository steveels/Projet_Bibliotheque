{% extends 'base.html.twig' %}

{% block title %}Hello AdminlivreController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
     <h1>Liste des emprunts de livres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Livre</th>
                <th>Date d'emprunt</th>
                <th>Date de restitution</th>
                <th>Date de restitution effective</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for book in emprunt_livres %}
                <tr>
                    <td>{{ book.emprunt.id }}</td>
                    <td>{{ book.book.title }}</td>
                    <td>{{ book.emprunt.dateEmprunt ? book.emprunt.dateEmprunt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ book.emprunt.dateRestitution ? book.emprunt.dateRestitution|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ book.emprunt.dateRestitutionEffective ? book.emprunt.dateRestitutionEffective|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_emprunt_livre_show', {'id': book.emprunt.id}) }}">Voir</a>
                       
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun emprunt trouv√©</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_emprunt_livre_new') }}">Ajouter un emprunt</a>
{% endblock %}
