{% extends 'base.html.twig' %}

{% block title %}{{'History of books' | trans }} {% endblock %}

{% block body %}

    {% set firstNameDisplayed = false %}

    
        {% if not firstNameDisplayed %}
            <h1>Bonjour {{ prenomUser }} Ceci est l'historique des livres que vous avez déjà emprunté</h1>
        {% set firstNameDisplayed = true %} 
        {% endif %}   


        <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">{{'Title' | trans}}</th>
            <th scope="col">{{'Author' | trans}}</th>
            <th scope="col"> {{'Resume' | trans}}</th>
            <th scope="col">{{'Etat du livre' | trans}}</th>
            <th scope="col">{{'Return date' | trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for emprunt in empruntsDetails %}
                <tr>
                <th scope="row">{{ emprunt.titre_livre }}</th>
                <td>{{ emprunt.auteur_livre }}</td>
                <td>{{ emprunt.resume_livre  }}</td>
                <td>{{ emprunt.etat_livre }}</td>
                <td>{{ emprunt.date_emprunt|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% endfor %}
        </tbody>
        </table>
{% endblock %}
