{% extends 'base.html.twig' %}

{% block title %}{{'User profile' | trans}}{% endblock %}

{% block body %}
        

    <h1>{{'Welcome to your profile' | trans}}  (Prenomutilisateur)</h1>

    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
               {{'My personal information' | trans}} 
            </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <p><a href={{ path('users.edit') }} class="link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">  {{'My contact details' | trans}}</a></p></div>
                <p><a href={{ path('user.edit.password')}} class="link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">{{'Password' | trans}}</a></p></div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              {{'My reservations' | trans}}
            </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <p><a href={{path('app_historique_livres')}} class="link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">{{'My book reservations' | trans}}</a></p></div>
                <p><a href={{path('app_historique_salle')}} class="link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">{{'My room reservations' | trans}}</a></p></div>            </div>
            </div>
        </div>
    </div>

    
{% endblock %}
