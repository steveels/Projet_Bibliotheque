{% extends 'base.html.twig' %}

{% block title %}{{'Registration' | trans}}{% endblock %}

{% block body %}
<section class="container">
    <div class="row">
        <div class="col">
            <h1>{{'Registration' | trans}}</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>{{'My identity' | trans}}</legend>
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.birthdate) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>
                
                <fieldset class="mb-3">
                    <legend>{{'My Contact Information' | trans}}</legend>
                    {{ form_row(registrationForm.adress) }}
                    {{ form_row(registrationForm.zip_code) }}
                    {{ form_row(registrationForm.city) }}
                    {{ form_row(registrationForm.phoneNumber) }}
                </fieldset>

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}

                <button type="submit" class="btn btn-primary bnt-lg my-3">{{'Register' | trans}}</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</section>
    
{% endblock %}
