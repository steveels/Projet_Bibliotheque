{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h1>Liste des livres</h1>
    <ul>
        {% for book in livres %}
            <li>{{ book.title }}</li>
            <img src="{{ book.image }}" alt="{{ book.title }}" class="book-image" />
            <li>{{ book.author }}</li>
            
        {% endfor %}
           
    </ul>
{% endblock %}

